@model FarmersPlatform.Models.Customer

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@Model.FirstName @Model.LastName | Personal Details</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0/dist/css/bootstrap.min.css">

    <style>
        body {
            font-family: 'Roboto', sans-serif;
            background-color: #f5f5f5;
            margin: 0;
            display: flex;
            justify-content: center;
            align-items: center;
            min-height: 100vh;
        }

        .container {
            width: 90%;
            max-width: 600px;
            background-color: #ffffff;
            border-radius: 10px;
            box-shadow: 0px 2px 10px rgba(0, 0, 0, 0.1);
            padding: 20px;
        }

        .form-control {
            border: 1px solid #ccc;
            border-radius: 5px;
            padding: 10px;
            width: 100%;
            margin-bottom: 15px;
            font-size: 1rem;
        }

        .btn-primary-custom {
            font-size: 1.2rem;
            border-radius: 10px;
            background-color: #4B0082; /* Cool Purple Color */
            color: white;
            box-shadow: 0px 2px 6px rgba(0, 0, 0, 0.2);
            transition: background-color 0.3s, box-shadow 0.3s;
        }

            .btn-primary-custom:hover {
                background-color: white;
                color: #4B0082;
                box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.3);
            }

        .btn-success-custom {
            font-size: 1.2rem;
            border-radius: 10px;
            background-color: #1cc88a; /* Success Green Color */
            color: white;
            box-shadow: 0px 2px 6px rgba(0, 0, 0, 0.2);
            transition: background-color 0.3s, box-shadow 0.3s;
        }

            .btn-success-custom:hover {
                background-color: white;
                color: #1cc88a;
                box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.3);
            }



        .gpt-button {
            background: none;
            border: none;
            padding: 0;
            margin-left: 10px;
            cursor: pointer;
        }

        .gpt-logo {
            width: 30px;
            height: 50px;
            margin-top: 10px; /* Add margin to align the logo vertically */
        }

        .modal {
            font-family: 'Roboto', sans-serif;
            background-color: #2e3b53;
        }

        .modal-dialog {
            max-width: 500px;
        }

        .modal-title {
            font-size: 1.25rem;
            font-weight: bold;
        }

        .modal-body {
            padding: 20px;
        }

        .modal-header {
        }

        .modal-footer {
            padding: 10px 20px;
            justify-content: center; /* Center the content horizontally */
        }

        .generate {
            background-color: white;
            color: #1cc88a;
            box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.3);
        }

            .generate:hover {
                background-color: #1cc88a;
                color: white;
                box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.3);
            }

    </style>
</head>
<body>
    <div class="container">
        <h2 class="text-center mb-4">Update Personal Details</h2>

        @if (TempData["UpdateSuccess"] != null)
        {
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                Update successful!
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }
        <div class="mb-3">
            <a href="@Url.Action("GoToCustomerInterface", "Customer", new { isLoggedIn = true, customerId = Model.CustomerId })" class="btn btn-primary-custom btn-block">Return to Customer Interface</a>
        </div>

        <form method="post" action="/Customer/UpdatePersonalDetails" asp-for="Model">
            <input type="hidden" asp-for="CustomerId" />

            <div class="mb-3">
                <input type="text" class="form-control" id="firstName" asp-for="FirstName" placeholder="First Name" required>
            </div>

            <div class="mb-3">
                <input type="text" class="form-control" id="lastName" asp-for="LastName" placeholder="Last Name" required>
            </div>

            <div class="mb-3">
                <input type="email" class="form-control" id="email" asp-for="Email" placeholder="Email" required>
            </div>

            <div class="mb-3">
                <input type="text" class="form-control" id="phoneNumber" asp-for="PhoneNumber" placeholder="Phone Number" required>
            </div>

            <div class="mb-3">
                <input type="text" class="form-control" id="address" asp-for="Address" placeholder="Address" required>
            </div>

            <button type="submit" class="btn btn-primary-custom btn-block">Update</button>
        </form>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>