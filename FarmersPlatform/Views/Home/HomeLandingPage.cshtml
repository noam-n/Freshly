@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Farm2Door | Connecting Growers and Customers</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-9ndCyUaIbzAi2FUVXJi0CjmCapSmO7SnpJef0486qhLnuZ2cdeRhO02iuK6FUUVM" crossorigin="anonymous">

    <style>
        carousel-item {
            object-fit: contain;
            height: 100%;
        }

        body {
            background-color: #1F392E;
            color: #FFFFFF;
            font-family: 'Segoe UI', Arial, sans-serif;
        }

        .lead {
            font-size: 22px;
            font-weight: bold;
            line-height: 1.5;
            color: #FFFFFF;
        }

        .about-heading {
            font-weight: bold;
            font-size: 28px;
            color: #333;
        }

        .about-image {
            height: 100%;
            background-image: url('@Url.Content("~/images/man-basket.jpg")');
            background-repeat: no-repeat;
            background-size: cover;
            background-position: center;
            width: 100%;
        }

        .about-content {
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: flex-start;
            height: 100%;
        }

        h1, h2, h3, h4, h5, h6 {
            color: #FFFFFF;
        }

        .message {
            font-size: 40px;
            transition: transform 0.3s;
        }

            .message:hover {
                transform: scale(1.1);
            }

        

        #hero {
            background-color: #0B361F;
        }

        #about {
            background-color: #0A301D;
        }

            #about p {
                text-align: center;
            }

            #about .message {
                font-weight: bold;
                color: #FFFFFF;
            }

        #testimonials {
            background-color: #093320;
        }

        #signup {
            background-color: #0B361F;
        }

        .btn-primary {
            background-color: #4CAF50;
            border-color: #4CAF50;
            transition: background-color 0.3s;
        }

            .btn-primary:hover {
                background-color: #3D8B41;
            }

        footer {
            background-color: #134B35;
            color: #FFFFFF;
            text-align: center;
        }

        

        .company-logo {
            width: 120px; /* Adjust the width value as needed */
            height: 100%;
            object-fit: contain;
            margin-right: 10px; /* Adjust the margin-right value as needed */
        }



        .appbar {
            position: sticky;
            top: 0;
            background-color: #134B35;
            display: flex;
            align-items: center;
            justify-content: flex-start; /* Update to flex-start */
            z-index: 999;
        }

            .appbar .farmer-dropdown {
                margin-right: 20px;
                color: #fff;
            }

            .appbar .btn-primary {
                background-color: #134B35;
                color: #fff;
                margin-right: 10px;
                border: none;
                font-size: 20px;
            }

                .appbar .btn-primary:hover {
                    background-color: white;
                    color: #134B35;
                    transition: background-color 0.5s, color 0.5s; /* Add transition effect */
                }

    </style>

</head>

    <body>


        <div class="appbar">

            <div class="logo">
                <a href="#top">
                    <img src="@Url.Content("~/Images/FreshfulLogo.png")" alt="Company Logo" class="company-logo" />
                </a>
            </div>


            <div>
                <a class="btn btn-primary" href="#about">About Us</a>
                <a class="btn btn-primary" href="#testimonials">Testimonials</a>
                <a class="btn btn-primary" href="#signup">Join Now</a>
            </div>
        </div>


        <section id="hero" class="bg-dark py-3 text-white text-center" style="background-image: url('@Url.Content("~/images/fruit-banner-wood.jpg")'); background-size: 100%; background-repeat: no-repeat; background-position: center;">
            <div class="container">
                <h1 class="display-4">Connecting Growers and Customers</h1>
                <p class="lead">We Love Fresh Organic Fruits And Vegetables <br /> And We Know You Will Too</p>
                <div class="mt-4">
                    <a href="@Url.Action("GoToCustomerInterface", "Customer", new {isLoggedIn = false , customerId = 404}))" class="btn btn-primary btn-lg mr-3">Go To Platform</a>
                </div>
            </div>
        </section>


        <section id="about" class="py-5">
            <div class="container">
                <div class="row">
                    <div class="col-md-6">
                        <div class="about-content">
                            <h2 class="mb-4">About Freshful</h2>
                            <p class="lead">At Freshful, we are passionate about connecting generations of growers and healthy customers. We believe in the power of fresh, organic produce and the positive impact it can have on individuals and communities.</p>
                            <p class="lead">Our mission is to provide a convenient and reliable platform that bridges the gap between growers and customers. We connect farmers who cultivate high-quality, sustainably-grown produce with individuals and families seeking fresh, nutritious food.</p>
                            <p class="lead">By prioritizing local sourcing and direct delivery, we ensure that our customers receive the freshest produce possible while supporting local farmers and reducing the carbon footprint associated with long-distance transportation.</p>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="about-image">

                        </div>
                    </div>
                </div>
            </div>
        </section>

        <section id="testimonials" class="py-5">
            <div class="container">
                <h2 class="text-center mb-4">You Guys!</h2>
                <div id="customerCarousel" class="carousel slide" data-bs-ride="carousel">
                    <div class="carousel-inner">
                        <div class="carousel-item active">
                            <div class="row">
                                <div class="col-md-4">
                                    <img src="~/images/customer-9-eating-updated.jpg" class="d-block w-100" alt="Customer 1">
                                </div>
                                <div class="col-md-4">
                                    <img src="~/images/customer-8-eating-updated.jpg" class="d-block w-100" alt="Customer 2">
                                </div>
                                <div class="col-md-4">
                                    <img src="~/images/customer-3-eating-updated.jpg" class="d-block w-100" alt="Customer 3">
                                </div>
                            </div>
                        </div>
                        <div class="carousel-item">
                            <div class="row">
                                <div class="col-md-4">
                                    <img src="~/images/customer-4-eating-updated.jpg" class="d-block w-100" alt="Customer 4">
                                </div>
                                <div class="col-md-4">
                                    <img src="~/images/customer-5-eating-updated.jpg" class="d-block w-100" alt="Customer 5">
                                </div>
                                <div class="col-md-4">
                                    <img src="~/images/potatoes-natural-soil.jpg" class="d-block w-100" alt="Customer 6">
                                </div>
                            </div>
                        </div>
                    </div>
                    <button class="carousel-control-prev" type="button" data-bs-target="#customerCarousel" data-bs-slide="prev">
                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                        <span class="visually-hidden">Previous</span>
                    </button>
                    <button class="carousel-control-next" type="button" data-bs-target="#customerCarousel" data-bs-slide="next">
                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                        <span class="visually-hidden">Next</span>
                    </button>
                </div>
            </div>
        </section>

        <section id="signup" class="bg-dark py-5">
            <div class="container">
                <div class="text-center">
                        <a href="@Url.Action("ShowLoginPage","Home", new { isFarmer = true })" class="btn btn-primary btn-lg mr-3">Join as Farmer</a>
                        <a href="@Url.Action("ShowLoginPage","Home", new { isFarmer = false })" class="btn btn-primary btn-lg" style="margin-left: 20px">Join as Customer</a>
                </div>
            </div>
        </section>

        <footer class="bg-dark py-3">
            <div class="container">
                    <p class="text-center text-white">&copy; 2023 Freshful. All rights reserved.</p>
            </div>
        </footer>

        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js" integrity="sha384-geWF76RCwLtnZ8qwWowPQNguL3RmwHVBC9FhGdlKrxdiJJigb/j/68SIy3Te4Bkz" crossorigin="anonymous"></script>
</body>
</html>